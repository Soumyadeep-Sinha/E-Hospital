    <!--heading-->
    <h2 class="heading">E - HOSPITAL online patient registration.</h2>


    <div class="mainsection">
        <div class="patientinfo">
            <p class="deptname"><%=nameofdept%> </p>
            <form method="post" class="register_patient" id="pat_form">
                <div class="category">
                    <label for="name">Patient name </label>
                    <input type="text" name="Patient_name" id="name" placeholder="Enter patient name." required>
                </div>
                <div class="category">
                    <label for="age">Patient age </label>
                    <input type="number" name="Patient_age" id="age" required placeholder="Enter patient's age">
                </div>
                <div class="category">
                    <div class="radio_options">
                        <p>Gender</p>
                        <input type="radio" id="male" name="gender" value="male" required>
                        <label for="male">male</label><br>
        
                        <input type="radio" id="female" name="gender" value="female" required>
                        <label for="female">female</label><br>
        
                        <input type="radio" id="Others" name="gender" value="Others" required>
                        <label for="Others">Others</label><br>
                    </div>
                </div>
                <div class="category">
                    <label for="number">Contact number</label>
                    <input type="text" name="Contact_num" id="number" placeholder="Enter phone No." required>
                </div>
                <div class="category">
                    <label for="date">Appointment Date</label>
                    <input type="date" name="App_date" id="date" required>
                </div>
                <div class="category">
                    <label for="aff">Email</label>
                    <input type="text" name="Patient_email" id="aff">
                </div>

                <button type="submit" class="sub-btn">Confirm Appointment</button>
            </form>
            
        </div>

        <div class="image">
        <img src="../images/<%=nameofimg%>.png" alt="">
