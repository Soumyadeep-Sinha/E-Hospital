<style>
    html,
    body {
        padding: 0;
        margin: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        font-family: Arial, Helvetica, sans-serif;
    }

    img {
        object-fit: scale-down;
    }

    /* first part */
    .header_panel {
        background-color: #2D033B;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        justify-content: space-between;
    }

    @media screen and (max-width: 575px) {
        .header_panel {
            flex-direction: column;
        }

        .top_image {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 20%;
        }
    }

    .right a {
        float: left;
        color: rgb(255, 255, 255);
        margin: 15px;
        text-align: center;
        padding: 14px;
        text-decoration: none;
        font-size: 24px;
        text-align: center;
    }

    .right a:hover {
        text-decoration: none;
        color: rgb(241, 83, 59);
        transition: 0.5s;
    }

    .right .icon {
        display: none;
    }

    @media screen and (max-width: 1276px) {
        .right a {
            display: none;
        }

        .right a.icon {
            float: right;
            display: block;
        }
    }

    .navbar_header_image {
        height: 100px;
        width: 60%;
        margin: 0 100px 0 20px;
    }

    @media screen and (max-width: 1276px) {
        .right.responsive {
            position: relative;
        }

        .right.responsive .icon {
            position: absolute;
            right: 0;
            top: 0;
        }
    }

    .right.responsive a {
        float: none;
        display: block;
        text-align: left;
    }

    /*second*/
    .secondbox {
        background-color: #53c2f5;
        height: 100vh;
        color: rgb(29, 27, 27);
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        padding: 5%;
    }

    .secondbox h1 {
        margin: 0;
    }
    .secondbox h2 {
        margin-top: 10px;
    }

    /*footer*/
    .footer_panel {
        text-align: center;
        background: #130a24;
        background-repeat: no-repeat;
        background-size: cover;
        color: white;
        padding: 3%;
        line-height: 1.5;
    }

    .copyright-text {
        margin: 0px;
        padding: 20px;
    }

    .terms_and_conditions {
        color: #D89CF6;
        text-decoration: none;
    }

    .terms_and_conditions:hover {
        color: #fffeff;
        text-decoration: none;
        transition: 1s;
    }

    @media only screen and (max-width: 1137px) {
        .footer_panel {
            padding: 50px;
        }
    }    
</style>

